<div class="row">
  <div class="col-md-6">
    <% if @geodeliver.region_id.nil? %>
      <h1>Your Prizing Area: empty</h1>
    <% else %>
      <h1>Your Prizing Area: <%= @geodeliver.postal_code %></h1>
    <% end %>
      <% if !@geodeliver.address.nil? %>
      	<div class="well">
      		<% if @geodeliver.address == "0" %>
            Active:
        		<%= @region_city %>,
        		<%= @region_country %>
          <% elsif @geodeliver.address == "1" %>
            Inactive (Postal Code Not Valid):
          <% elsif @geodeliver.address == "2" %>
            Inactive (Country not supported):
          <% end %>
    	 </div>
      <% end %>
  </div>

  <div class="col-md-6">
  <h1>Change area you win prizes for</h1>
    	<div class="well">

		<%= form_for @geodeliver do |t| %>
			<%= t.text_field :postal_code, :placeholder => 'Postal/Zip code' %>
			<%= t.select :country_code,  ["US", "CA", "Other"] %>
			<%= t.submit "Postal/Zip Code", class: "btn btn-large btn-primary" %>
		<% end %>
    <h6>*If you are in Canada, this form only accepts the first 3 digits of your postal code</h6>
	</div>
  </div>
</div>


<div class="row">
  <div class="col-md-6">
  <% if !@geodeliver.region_id.nil? %>
    <% if @tier1_description == "" %>
      <h1 class="not-prized">No prizes for this zone</i></h1>
