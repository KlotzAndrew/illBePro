<!DOCTYPE html>
<html>
<head>
  <title>i'llBePro</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	
	<nav class="navbar navbar-default navbar-fixed-top" role="navigation">
		<ul class="nav navbar-nav navbar-right">
			<% if user_signed_in? %>
				<li><%= link_to current_user.profile_name, summoner_path %></li>
				
				<li><%= button_to "Sign Out", logout_path, :class => "btn btn-danger navbar-btn", :method => :get  %></li>
			<% else %>
				<li><%= link_to "Register", register_path %></li>
				<li><%= button_to "Sign in", login_path, :class => "btn btn-info navbar-btn", :method => :get  %></li>
			<% end %>

		</ul>
		<div class="navbar-inner">
			<div class="container">
				<ul class="nav navbar-nav">
					<a class="navbar-brand" href="/"><strong> i'llBePro </strong></a>
					<li><%= link_to "Challenges", challenges_path %></li>
					<li><%= link_to "Summoner", summoner_path %></li>
					<li><%= link_to "Leaderboard", scores_path %></li>
				</ul>
			</div>
		</div>
	</nav>
		
	<div class="container">
		<% flash.each do |type, message| %>
			<div class="alert <%= flash_class type %> alert-dismissible" role="alert">
					<button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
					<%= message %>
				</div>
		<% end %>

		<%= yield %>
	</div>

</body>
</html>


<nav class="navbar navbar-default navbar-fixed-bottom" role="navigation">
  <div class="container">
  		<div class="col-md-12" >
  			<ul class="nav navbar-nav">
				<li class="custom-footer"><%= link_to 'About', page_path('about') %></li>
				<li class="custom-footer"><%= link_to 'FAQ', page_path('faq') %></li>
				<li class="custom-footer"> <%= link_to 'Contact', page_path('contact') %></li>
				<li class="custom-footer"> <%= link_to 'Privacy', page_path('privacy') %></li>
			</ul>
			<div class="custom-footer">
			<p class="text-right">an Andrew Klotz production </br> Copyright (c) 2014</p>
			</div>
		</div>

  </div>
</nav>