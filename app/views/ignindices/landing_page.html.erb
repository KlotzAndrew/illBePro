<div data-pagespec="landing_page" id="page_name"><div>
<section id="top" >
	<div class="container">
		<div class="teaser-context  text-center" >
			<div class="custom-header">
				<h1 class="text-center" style="color: white;"><strong>Play League, Win Pizza</strong></h1>
				<h4 class="text-center" style="color: white;">Rewards from your local Restaurants</h4>
			</div>

			<div class="col-md-12 col-md-offset-0"  style="margin-top: 40px">

			  		<div class="row" style="margin-bottom:175px; margin-top: 100px;">

			  			<%= link_to "Get Started", setup_path, :class=>"col-md-4 col-md-offset-4 btn btn-large btn-lprimary ", :style=>"color:white; font-size: 30px" %>		
						</div>
			  		</div>		  		
			</div>
		</div>
	</div>
</section>

<section id="setup">
	<div class="setup-background-2">
		<h1 class="text-center" style="color:white;" >Setup is Quick</h1>
	</div>

	<div class="landing-setup-background">
		<div class="container" >
			<div class="col-md-8 col-md-offset-2">
				<div class="setup-background">

					<div class="container-fluid" style="margin-top:25px;">
						<div class="row text-center">
							
							<div class="col-md-12 col-md-offset-0">

								<div id="setup_progress_bar">
									<div class="breadcrumb-trail">

										<div class="breadcrumbs">
										    <div class="breadcrumb-cell first">
											   		<div id="bread_1" class="breadcrumb active">
												    	<div class="breadcrumb-icon"></div>
											    	<span class="breadcrumb-label">1) Postal</span>
										     	</div>
										    </div>

										    <div class="breadcrumb-cell">
													<div id="bread_2" class="breadcrumb">
													<div class="breadcrumb-icon"></div>			    	
													<span class="breadcrumb-label">2) Challenge</span>
												</div>
										    </div> 
											     						    

										    <div class="breadcrumb-cell last">

										   		<div id="bread_3" class="breadcrumb">
												<div class="breadcrumb-icon"></div>
												<span class="breadcrumb-label">3) Summoner</span>
												</div>
										    </div>       

									  </div>
									</div>	
								</div>			

							</div>

						</div>
					</div>
				</div>
			</div>
		</div>
		<div class="" style="min-height: 450px">
			<div id="lp-s1" class="container">
				<%= render 'staticpages/teaser_step1' %>
			</div>
			<div id="lp-s2" class="container start-ghost">
				<%= render 'staticpages/teaser_step2' %>
			</div>
			<div id="lp-s3" class="container start-ghost">
				<%= render 'staticpages/teaser_step3' %>
			</div>				
		</div>
	</div>
</section>

<section id="winning">
	<div class="setup-background-2">
		<h1 class="text-center" style="color:white;" >Complete Challenges and Get Prizes</h1>
	</div>

  <div class="background-history2">

    <!-- sketch #7 -->
    <div class="container" >
	    <div class="well leaderbox" style="margin-top:25px">
	    	<div class="well">
	    		<h1>Win 10 Games</h1>
	            <div class="progress basic-border text-center" style="margin-bottom:5px; height: 40px">
	              <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 100%; min-width: 0.5em;" >
	                <h4><%= 10 %>/<%= 10 %></h4>
	              </div>
	            </div>	

	    	</div>
	    	<div class="well">
              <div class="row brand-banner" >
                <div class="col-md-6" style="padding-left: 0px;">
                  <div class="">
                    <div class="text-left">
                      <%= image_tag("cora1.jpg", size: "500x225", class: "brand-banner") %>
                    </div>
                  </div>  
                </div>

                <div class="col-md-6 col-md-offset-0" >
	                <div class="row">
	                <div class="col-md-8 col-md-offset-2">
	                    <h1 class="text-center" style="margin-top: 15px;"> <strong><%= "$20 off" %></strong> </h1>
	                    <h1 class="text-center" style="border: 1px dotted"><strong>Code: <%= "123abc" %></strong></h1>	               
	                    <h5 class="text-center"><strong><i>Delivery or Walk-in</i></strong></h5>
	                    <h5  class="text-center">416-922-1188 - 656A Spadina Av.</h5>                                                          
	                    <h5 class="text-center">Expires 1/1/2016.</h5>
	                </div>                 
	                </div>

                </div>


              </div>	    		
	    	</div>
	    </div>
    </div>

  </div>
</section>

<section id="sponsor">
	<div class="setup-background-2">
		<h1 class="text-center" style="color:white;" >Featured Local Restaurant</h1>
	</div>
	
	<div class="container">

		<div class="row" style="">
			<h1 class="text-left">Cora Pizza in Toronto</h1>
		</div>


		<div class="row">
			<div class="col-md-6">
		      <h4>Cora Pizza is currently offering Weekly Challenges to these areas in Toronto: M6G, M6J, M5R, M5S, M5T, M5G</h4><br/>
		      <h4>
		        Cora Pizza loves gamers, and will be experimenting with rewarding your League of Legends games with pizza. Starting June 15th Cora Pizza will be rewarding your in-game acheivements with pizza.
		      </h4>
		    </br>
		      <h4>
		        Since 1984, Cora Pizza's family-owned business has been satisfying Toronto appetites. Located Downtown Toronto, Cora Pizza offers gourmet specialty pizzas that are guaranteed to please your taste buds! 
		      </h4>
		      <div class="text-center">
		      <%= link_to "Learn More", current_achievement_url, :class=>"btn btn-lprimary", :style=>"color:white;" %>
		      </div>
			</div>
		    <div class="col-md-6">
		      <a href="http://www.corapizza.com">
		        <%= image_tag("cora1.jpg", class: "brand-banner", size: "500x225") %>    
		      </a>
		     <div class="text-center" style="margin-top: 40px">
		        <h4>656A Spadina Av</h4>
		        <h4>Toronto, ON M5S 2H7</h4>
		        <h4>(416) 922-1188</h4>
		        <h4>www.corapizza.com</h4>
		      </div>
		    </div>
		</div>
	</div>
</section>

