		    <div class="col-md-3 col-md-offset-1">
		    	<div class="text-center">
			    	<% if user_signed_in? %>
				    	<%= button_to "Start Now", new_status_path, :class => "btn btn-lprimary home-button", :method => :get  %>
			    	<% else %>

			    		<div class="lwell">
			    			<h3 style="margin-top: 0px;">See what you can win in your area</h3>

							<%= form_for @ignindex, :html => { :id => '' } do |t| %>
								<h5 class="text-left" style="margin-bottom: 0px; margin-top: 20px;">Postal/Zip Code</h5>
								<%= t.text_field :postal_code, :placeholder => 'M5R', class: "form-control input-md" %>
								<%= t.submit "Search", class: "btn btn-large btn-lprimary lp-search" %>
							<% end %>
						    <h6 class="">(CAN uses first 3-digits, US uses first 5-digits)</h6>


			    		</div>


			    	<% end %>
		    	</div>
		    </div>
		</div>

