<div class="container-fluid">
	<div class="setup-background">

		<div class="row">

			<h1 class="text-center">Welcome! Let's get you ready to win some pizza</h1>
			
			<div class="col-md-6 col-md-offset-3">


				<div id="setup_progress_bar">
					<div class="breadcrumb-trail">
						<div class="breadcrumbs">
						    <div class="breadcrumb-cell first">
						    	<% if @setup_progress == 0 %>
								<div id="bread_1" class="breadcrumb active">				    	
						    	<% else %>
						   		<div id="bread_1" class="breadcrumb checked selectable">
						    	<% end %>
							    	<div class="breadcrumb-icon"></div>
							    	<span class="breadcrumb-label">Postal Code</span>
						     	</div>
						    </div>

						    <div class="breadcrumb-cell">
						    	<% if @setup_progress == 1 %>
								<div id="bread_2" class="breadcrumb active">				    	
						    	<% elsif @setup_progress > 1 %>
						   		<div id="bread_2" class="breadcrumb checked selectable">
						   		<% else %>
						   		<div id="bread_2" class="breadcrumb">
						    	<% end %>
									<div class="breadcrumb-icon"></div>
									<span class="breadcrumb-label">Choose Prize</span>
								</div>
						    </div> 

						    <div class="breadcrumb-cell">
						    	<% if @setup_progress == 2 %>
								<div id="bread_2" class="breadcrumb active">				    	
						    	<% elsif @setup_progress > 2 %>
						   		<div id="bread_2" class="breadcrumb checked selectable">
						   		<% else %>
						   		<div id="bread_2" class="breadcrumb">
						    	<% end %>
									<div class="breadcrumb-icon"></div>
									<span class="breadcrumb-label">Choose Game</span>
								</div>
						    </div>

						    <div class="breadcrumb-cell">
						    	<% if @setup_progress == 3 %>
								<div id="bread_2" class="breadcrumb active">				    	
						    	<% elsif @setup_progress > 3 %>
						   		<div id="bread_2" class="breadcrumb checked selectable">
						   		<% else %>
						   		<div id="bread_2" class="breadcrumb">
						    	<% end %>
									<div class="breadcrumb-icon"></div>
									<span class="breadcrumb-label">Summoner Name</span>
								</div>
						    </div> 							     						    

						    <div class="breadcrumb-cell last">
						    	<% if @setup_progress == 4 %>
								<div id="bread_3" class="breadcrumb active">				    	
						   		<% else %>
						   		<div id="bread_3" class="breadcrumb">
						    	<% end %>
									<div class="breadcrumb-icon"></div>
									<span class="breadcrumb-label">Play</span>
								</div>
						    </div>       

					  </div>
					</div>	
				</div>			



			</div>

		</div>

	</div>
</div>

<div class="container-fluid absolute-margin">
<div class="row">
	<div class="col-md-12 col-md-offset-0">
		<h3>Which game do you want to play?</h3> 
	</div>
</div>

	<div class="col-md-8 col-md-offset-2">

		<%= button_to "League of Legends", summoner_path, :class => "btn btn-lg btn-primary", :method => :get  %>
        <div class="btn-group">
        	<div style="margin-top: 10px;" class="btn btn-lg btn-default">More Coming Soon</div>
        </div>
	</div>

</div>