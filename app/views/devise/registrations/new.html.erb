
<div class="row">
  <div class="col-md-3">
    <div class="devise-border-form">

      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "well"}) do |f| %>
        <%= devise_error_messages! %>
          <fieldset>
            <legend>Sign up</legend>         
            <%= f.input_field :profile_name, :placeholder => "Username" %>
            <%= f.email_field :email, :autofocus => true, :placeholder => 'Email' %>
            <%= f.password_field :password, :placeholder => 'Password (min 8 chars)' %>
            <%= f.password_field :password_confirmation, :placeholder => 'Password confirmation' %>
            <div><%= f.submit "Sign up", :class=>"btn btn-primary" %></div>
        <fieldset>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>

    <div class="col-md-9">
        <h3 class="text-center"><strong>Win a Pizza for playing League of Legends!*</strong></h3>
        <h5 class="text-center"><i>*Check out the <a href="/pages/faq">FAQ</a> for pizza details</i></h5>          
        <div class="teaser-context">
          <div class="row">

          <div class="col-md-8 col-md-offset-2">
            <div class="loader-image">
                <%= image_tag("basic-gif.gif", :alt => "rss feed", height: '304', width: '516') %>
            </div>
          </div>
        </div>
      </div>  

    </div>
</div>

