
<div class="devise-border-form">
	<div class="row">
		<div class="col-md-4">

			<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "well"}) do |f| %>
				<fieldset>
					<legend>Sign in</legend>
				 	<%= f.email_field :email, :autofocus => true, :placeholder => 'Email' %>
				 	<%= f.password_field :password_confirmation, :placeholder => 'Password' %>

					 <% if devise_mapping.rememberable? %>
					   	<div style="display:inline" class="col-sm-offset-1 col-sm-10">
					   		<%= f.input :remember_me, as: :boolean, inline_label: 'Remember me', label: false %>
					   	</div>
					 <% end %>

				  <div><%= f.submit "Log in", :class=>"btn btn-primary" %></div>
				</fieldset>
			<% end %>
			<%= render "devise/shared/links" %>
		</div>
		<div class="col-md-8">
			<div class="jumptron"
			<h1>gif or some info on how this works</h1>
			<h2>wicked sick gif here</h2>
			<div>
		</div>
	</div>
</div>