<section id="leaderboard">
	<div class="container" style="min-height: 700px;">
		<div class="row">
			<div class="col-md-10 col-md-offset-1">
				<div class="well leaderbox" style="margin-top: 50px; color: black;">
					<h1 class="text-center">Leader Board<br/><p>(July 13th - Aug 2nd)</p>
					</h1>

					<div class="row">
						<div class="col-md-12 col-md-offset-0">
							<table class="table">
								<thead>
									<tr>
									  <th class="col-md-1">#</th>
									  <th class="col-md-2">Summoner</th>
									  <th class="col-md-6 text-center">Progress</th>
									  <th class="col-md-3 text-center">Rewards From</th>
									</tr>
								</thead>
								<tbody>
									<% p = 1 %>
									<% @achievements.each do |points,name,index,prog| %>
										<tr>
										  <td><%= p %></td>
										  <td><%= name %>
										  	<% if points > 0 %>
										  	(<%= points %>)
										  	<% end %>
										  </td>
										  <td>
									  	<div class="col-md-12">
										   <div class="progress basic-border">
										      <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: <%= prog %>%; min-width: 2em;" >
										        <%= prog %>%
										      </div>
										    </div>  
									  	</div>
										  </td>
											<% if index.has_prizing == true && index.merchant == "Cora Pizza" %>
												<td class="col-md-3 text-center"><a href="/current_achievement" style="">Cora Pizza</a></td>
											<% elsif index.merchant == "Papa John's" %>
												<td class="col-md-3 text-center"><a href="/current_achievement" style="">Cora Pizza</a></td>
											<% else %>
												<td></td>
											<% end %>
										</tr>
										<% p = p += 1 %>
									<% end %>
								</tbody>
							</table>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>


