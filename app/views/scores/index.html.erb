
<% if @score.prize_id != nil %>


  <h3 class="text-center">Current Prize</h3>
    <div class="well">
    <p class="text-center">
       <%= @prize_vendor %>
      </br> <%= @prize_description %>
    </p>

    <%= simple_form_for(@score, html: {class: 'form-hoizontal'}) do |f| %>
      <%= f.button :submit, "Accept", class: "btn btn-lg btn-success" %>
      <%= f.button :submit, "Upgrade", class: "btn btn-lg btn-danger" %>
    <% end %>
    </div>

<% else %>  
<% end %>

<div class="page-header">
  <h1 class="text-center"><strong>Prize history</strong></h1>
</div>

<% @history.each do |x| %>
  <div class="page-header">
    <div class="row">
      <div class="col-md-12">
    
        <div class="well">
        
    <div class="row">
      <div class="col-md-6">      
        <div class="prize-offer">
          <h3 class="text-center">You just won: <%= x.description %></h3>
          <h3 class="text-center">Prized by: <%= x.vendor %></h3>
          <h3 class="text-center">reward code: <%= x.code %></h3>
        </div>
      </div>
      <div class="col-md-6">
        <div class="text-center">
       <%= image_tag("kayle.jpg", size: "480x300") %>
        </div>
      </div>
    </div>


        </div>
      </div>
    </div>
  </div>
<% end %>


