<h1>High scores</h1>


<div class="row">
  <div class="col-md-6">
    <table class="table table-striped">
      <thead>
        <tr>
          <th></th>
          <th>Profile</th>
          <th>This week</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody> 
        <% x = 0 %>
        <% @top_profiles.each do |score| %>
          <tr><% x+=1 %>
            <td><%= x.ordinalize %></td>
            <td><%= @users.find(score.user_id).profile_name %></td>
            <td><%= score.week_1 %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="col-md-6">
    <table class="table table-striped">
      <thead>
        <tr>
          <th></th>
          <th>Summoner</th>
          <th>This week</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% y = 0 %>
        <% @top_summoners.each do |score| %>
          <tr><% y+=1 %>
            <td><%= y.ordinalize %></td>
            <td><%= score.summoner_name %></td>
            <td><%= score.week_1 %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

</div>

