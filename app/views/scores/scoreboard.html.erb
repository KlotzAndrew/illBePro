<h1 class="page-header text-center">ScoreBoard</h1>

<% @achievements.each do |x| %>
	<% i = 1 %>
	<% number = x.experience_earned/x.experience_req %>
	<% achievement_progress = (number.round(2)*100).round(0) %>
	<div class="table">
	  	<div class="col-md-1">
			<h1><%= i %></h1>
	  	</div>
	  	<div class="col-md-11">
			<div class="panel panel-default achievement-board">
			  <div class="panel-body">

				  	<div class="col-md-1">
						<%= x.ignindex.summoner_name %><br/>
				  	</div>
				  	<div class="col-md-11">
					  	<% if x.kind == 1 or x.kind == 2 %>
					  		Spell 'CORA' or win 10 games
					  	<% end %>
				  	</div>
				  	<div class="col-md-12">
					   <div class="progress">
					      <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: <%= achievement_progress %>%; min-width: 2em;" >
					        <%= achievement_progress %>%
					      </div>
					    </div>  
				  	</div>
				  	<div class="col-md-12">
						<%= x.can_spell_name %>/<%= x.can_spell_name_open %><br/>
				  	</div>

			  </div>
			</div>
	  	</div>
	</div>
	<% i = i += 1 %>
<% end %>