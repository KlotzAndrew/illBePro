<div class="container">
	<h1>Challenges Available for <%= @ignindex.postal_code %></h1>
	<% @achievements.each do |x| %>
	<div class="row">
		<div class="col-md-10">
		    <div class="well">
		      <h2 style="margin-top: 0px; margin-bottom: 10px;">Cora Pizza Challenge</h2>

		      <div class="row">
		        <div class="col-md-6">
		        	1) Win 10 games
		        </div>
		        <div class="col-md-6">
		          <div class="progress basic-border">
		            <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: <%= (x.experience_earned/x.experience_req.round(2)*100).round %>%; min-width: 2em;" >
		              <%= (x.experience_earned/x.experience_req.round(2)*100).round %>%
		            </div>
		          </div>                
		        </div> 

		      </div>
		      <div class="row">
		        <div class="col-md-6">
		          2) Play games with champions whose name starts with the letter from "CORA"
		        </div>
		        <div class="col-md-6">
		          <h4>
		          <% name_count = x.can_spell_name.length %>
		          <% i = 0 %>
		          <% name_count.times do |y| %>
		          <% if x.can_spell_name_open.include?(x.can_spell_name[i]) %>
		            <%= x.can_spell_name[i] %>
		          <% else %>
		          <span class="spelling-name">  
		            <%= x.can_spell_name[i] %>
		          </span>
		          <% end %>
		          <% i = i += 1 %>
		          <% end %>
		          </h4>                   
		        </div>              
		      </div>
		    </div>
		</div>
		<div class="col-md-2">
			<div class='btn btn-lprimary'>Activate</div>
		</div>
	</div>
	<% end %>
</div>