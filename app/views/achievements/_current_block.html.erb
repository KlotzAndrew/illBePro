<% active ||= 0 %>
<div class="well">
  <div class="row">
    <div class="col-md-6">
      <h3 style="margin-top: 0px; margin-bottom: 10px;">
          <i>
          <% if x.has_prizing %>
          Prizes Weekly
          <% else %>
          No Prizing, just for fun :)
          <% end %>
          (<%= x.id %>)
          </i>
      </h3>
        <h2 style="margin-top: 0px;"><%= x.name %></h2>
      <% if x.wins_required != 0 %>
      <% if x.wins_recorded.nil? then x.wins_recorded = 0 end %>
      <div class="row" style="margin-top: 50px">
        <div class="col-md-6">
        	1) Win <%= x.wins_required %> games
        </div>
        <div class="col-md-6">
          <div class="progress basic-border text-center">
            <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: <%= (x.wins_recorded/x.wins_required.round(2)*100).round %>%; min-width: 0.5em;" >
            </div>
              <%= x.wins_recorded %>/<%= x.wins_required %>
          </div>                
        </div> 
      </div>
     <% end %>

      <% if !x.can_spell_name.nil? %>
      <div class="row">
        <div class="col-md-6">
          2) Play games with champions whose name starts with the letter from "<%= x.can_spell_name %>"
        </div>
        <div class="col-md-6">
          <h2 style="margin-top: 0px">
          <% name_count = x.can_spell_name.length %>
          <% i = 0 %>
          <% name_count.times do |y| %>
          <% if x.can_spell_name_open.include?(x.can_spell_name[i]) %>
            <%= x.can_spell_name[i] %>
          <% else %>
          <span class="spelling-name">  
            <%= x.can_spell_name[i] %>
          </span>
          <% end %>
          <% i = i += 1 %>
          <% end %>
          </h2>                   
        </div>              
      </div>
      <% end %>
          <div class="row" style="margin-top:25px;">
        <% if x.merchant == "Cora Pizza" %>
          <%= link_to "Learn More", current_achievement_path, :class => "", :method => :get, :style => "margin-top: 50px;"   %>
        <% end %>
      </div>      
    </div>
    <div class="col-md-6">
      <div class="row">
        <div class="col-md-10 text-right">
          <h3 style="margin-top: 5px;"><i>
            Solo/Duo Queue
          </i></h3>
        </div>
        <div style="margin-top: 0px;" class="col-md-2">
        <% if active == 0 %>
          <%= simple_form_for @achievement do |f| %>
            <%= f.input :achievement_id, :as => :hidden, :input_html => { :value => x.id } %>
            <%= f.button :submit, "Activate", class: "btn btn-lprimary" %>
          <% end %>
        <% elsif active == 1 %>
          <%= button_to "Play", root_path, :class => "btn btn-lprimary", :method => :get  %>
        <% else %>
          <%= button_to "Change", achievements_path, :class => "btn btn-lprimary", :method => :get  %>
        <% end %>
        </div>
      </div>
      <div class="row text-right">
        <% if x.merchant == "Cora Pizza" %>
          <%= image_tag("cora1.jpg", size: "500x225", class: "brand-banner") %>
        <% else %>
          <%= image_tag("front-cover4.jpg", size: "500x225", class: "brand-banner") %>
        <% end %>
      </div>           
    </div>
  </div>
</div>
