<%= render 'form' %>

<div class="new-challenge">

  <div class="row">
    <div class="col-md-6">
      <div class="well">

        <div class="row">
          <div class="col-md-6">
            <h4>Win a ranked game<h4>
            <h4>Points: 1<h4>
            <h4>90 Minutes<h4>
          </div>

          <div class="col-md-6" >
            <div class="form-actions">
              <div class="text-center">
                <div class="new-challenge2">
                  <%= simple_form_for(@status, html: {class: 'form-hoizontal'}) do |f| %>
                    <%= f.hidden_field :kind, :value=>1 %>
                    <%= f.button :submit, "Start", class: "btn btn-lg btn-primary" %>
                  <% end %>
              </div>
              </div>
            </div>
          </div>

        </div>

      </div>
    </div>



    <div class="col-md-6">

      <div class="well">
        <div class="row">
          <div class="col-md-6">
            <h4>Win 2 ranked games in a row<h4>
            <h4>Points: 3<h4>
            <h4>120 Minutes<h4>
          </div>

          <div class=".col-md-6" >
            <div class="form-actions">
              <div class="text-center">
                <div class="new-challenge2">
              <%= simple_form_for(@status, html: {class: 'form-hoizontal'}) do |f| %>
                <%= f.hidden_field :kind, :value=>2 %>
                <%= f.button :submit, "Start", class: "btn btn-lg btn-primary" %>
              <% end %>
            </div>
            </div>
            </div>
        </div>
      </div>
    </div>
  
  </div>
</div>


<div>
<%= link_to 'Back', challenges_path %>
</div>
