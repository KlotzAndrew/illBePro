<%= render 'form' %>

<% if @ignindex.prize_id != nil %>
  <div class="page-header">
    <div class="row">
      <div class="col-md-12">
    
        <div class="well">
        
          <div class="row">
            <div class="col-md-6">      
              <div class="prize-offer">
                <h3 class="text-center">You just won: <%= @prize_description %></h3>
                </div>
            </div>
            <div class="col-md-6">
              <div class="text-center">
                <% if @prize_description == "$10 RP code" %>
                  <%= image_tag("10rp_image.jpg", size: "175x233") %>
                <% elsif @prize_description == "$11 RP code" %>
                  <%= image_tag("10rp_image.jpg", size: "175x233") %>
                <% elsif @prize_description == "Free Pizza from Domino's" %>
                  <%= image_tag("dominos_image.png", size: "414x292") %>
                <% else %> 
                 <%= image_tag("cora1.jpg", size: "480x300") %>                
                <% end %>
              </div>
            </div>
          </div>

          <div class="row">
            <div class="col-md-4 col-md-offset-4">
              <%= simple_form_for(@ignindex, url: ignindex_path(@ignindex), html: {class: 'form-hoizontal'}) do |f| %>
                <%= f.button :submit, "Accept", class: "btn btn-lg btn-success" %>
                <%= f.button :submit, "Upgrade", class: "btn btn-lg btn-danger", data: { confirm: "There are no prizes to upgrade to, this will reject the prize you won. Are you sure?" } %>
              <% end %>
            </div>
          </div>

        </div>
      </div>
    </div>
  </div>
<% else %>

<div class="container-fluid"  style="margin-top: 25px;">

  <div class="row">



    <div class="col-md-6"  style="margin-top: 0px;">
      
      <h2>
        CURRENT ACHIEVMENT
      </h2>

        <h5>
          Earn 10 experience points to get an end of the week reward. Each win recoded is 1exp, winning game with a champion whose name starts with one of the letters CORA is 2exp.
        </h5>
        <h5>
          Also, each game played has a chance to win 1 of 15 $5 pizza prizes
        </h5>



      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>Value</th>
            <th>Chance</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <th scope="row">Tier 1</th>
            <td>$1</td>
            <td>25%</td>
          </tr>
          <tr>
            <th scope="row">Tier 2</th>
            <td>$2</td>
            <td>25%</td>
          </tr>
          <tr>
            <th scope="row">Tier 3</th>
            <td>$5</td>
            <td>25%</td>
          </tr>
          <tr>
            <th scope="row">Tier 4</th>
            <td>$20</td>
            <td>25%</td>
          </tr>             
        </tbody>
      </table>

      <h5>
        Prizes get awarded Sunday at 8:00pm EST. Randomly selected from the above pool
      </h5>

      <span class="btn btn-primary" style="background-color: grey;">Switch Achievement</span>

    </div>

    <div class="col-md-6 text-center">
      Progress towards achievement
      <div class="progress">
        <div class="progress-bar" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: <%= @achievement.experience_earned/@achievement.experience_req %>%; min-width: 2em;" >
          <%= @achievement.experience_earned/@achievement.experience_req %>%
        </div>
      </div>

      <div class="text-left">
        <h1>CORA</h1>
        <h5>Games played: <%= @achievement.games_played %> </h5>
        <h5>CORA games played: <%= @achievement.can_spell_name.length - @achievement.can_spell_name_open.length %> </h5>
      </div>
       <%= image_tag("cora1.jpg", size: "240x150") %>                

        <div class="form-actions">
          <div class="text-center">
            <div>
              <%= simple_form_for(@status, html: {class: 'form-hoizontal'}) do |f| %>
                <%= f.hidden_field :kind, :value=>5 %>
                <%= f.button :submit, "Play Game", class: "btn btn-lg btn-success" %>
              <% end %>
            </div>
          </div>
        </div>

    </div>


  </div>

<h4 class="text-center" style="margin-top: 50px;">*Enabled for Solo/Duo Queue NA Ranked 5v5 on Summoners Rift</h4>
</div>
<% end %>

