<div class="new-challenge">
<div class="row">
  <div class="col-md-6">
    <div class="well">
      <h2>Win your next game: 1 point<h2>

      <%= simple_form_for(@status, html: {class: 'form-hoizontal'}) do |f| %>
        <% if @status.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@status.errors.count, "error") %> prohibited this status from being saved:</h2>

            <ul>
            <% @status.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>


        <div class="form-actions">
          <%= f.hidden_field :challenge_description, :value=>"Win your next game!" %>
          <%= f.hidden_field :value, :value=>5400 %>
          <%= f.hidden_field :kind, :value=>1 %>
          <%= f.hidden_field :points, :value=>1 %>
          <%= f.button :submit, "Start" %>
        </div>
      <% end %>
    </div>
  </div>
 </div>
</div>


