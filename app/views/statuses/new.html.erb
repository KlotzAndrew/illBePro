<%= render 'form' %>

<h4 class="text-center  ">Challenges are enabled for Solo/Duo NA Ranked 5v5 on Summoners Rift</h4>

<div class="new-challenge">

  <div class="row">
    <div class="col-md-6">
      <div class="well">

        <h4 class="text-center">Win your next game</h4>

        <div class="row">
          <div class="col-md-3">
            <h4><h4>
            <h4>Victory:<h4>
            <h4>Defeat:<h4>
            <h4>Time limit:<h4>
          </div>
          <div class="col-md-6">
            <h4><h4>
            <h4>2<h4>
            <h4>0<h4>
            <h4>65 Minutes<h4>
          </div>

          <div class="col-md-3" >
            <div class="form-actions">
              <div class="text-center">
                <div class="new-challenge2">
                  <%= simple_form_for(@status, html: {class: 'form-hoizontal'}) do |f| %>
                    <%= f.hidden_field :kind, :value=>1 %>
                    <%= f.button :submit, "Start", class: "btn btn-lg btn-success" %>
                  <% end %>
                </div>
              </div>
            </div>
          </div>

        </div>

         <h5 class="text-center">No penalty for canceling challenge</h5>
      
      </div>
    </div>



    <div class="col-md-6">
      <div class="well">

        <h4 class="text-center">Win your next game with a random champion</h4>

        <div class="row">
          <div class="col-md-3">
            <h4><h4>
            <h4>Victory:<h4>
            <h4>Defeat:<h4>
            <h4>Time limit:<h4>
        
          </div>
          <div class="col-md-6">
            <h4><h4>
            <h4>4<h4>
            <h4>0<h4>
            <h4>65 Minutes<h4>
      
          </div>



          <div class=".col-md-3" >
            <div class="form-actions">
              <div class="text-center">
                <div class="new-challenge2">
                  <%= simple_form_for(@status, html: {class: 'form-hoizontal'}) do |f| %>
                    <%= f.hidden_field :kind, :value=>4 %>
                    <%= f.button :submit, "Start", class: "btn btn-lg btn-success" %>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>

         <h5 class="text-center">Canceling challenge before 20 minutes costs 1 point</h5>
      </div>
  
    </div>
  </div>

<div class="new-challenge">

  <div class="row">
    <div class="col-md-6">
      <div class="well">

        <div class="row">
          <div class="col-md-3">
            <h4>Requirements:<h4>
            <h4>Points:<h4>
            <h4>Time limit:<h4>
          </div>
          <div class="col-md-6">
            <h4>Win 2 games in a row<h4>
            <h4>3<h4>
            <h4>120 Minutes<h4>
          </div>

          <div class="col-md-3" >
            <div class="form-actions">
              <div class="text-center">
                <div class="new-challenge2">
                  <%= button_to "Locked", new_status_path, :class => "btn btn-warning", :method => :get  %>
                </div>
              </div>
            </div>
          </div>
        </div>

      </div>
    </div>

    <div class="col-md-6">
      <div class="well">
        <div class="row">
          <div class="col-md-3">
            <h4>Requirements:<h4>
            <h4>Points:<h4>
            <h4>Time limit:<h4>
          </div>
          <div class="col-md-6">
            <h4>Win the next 3 games in a row<h4>
            <h4>9<h4>
            <h4>180 Minutes<h4>
          </div>

          <div class=".col-md-3" >
            <div class="form-actions">
              <div class="text-center">
                <div class="new-challenge2">
                  <%= button_to "Locked", new_status_path, :class => "btn btn-warning", :method => :get  %>
                </div>
              </div>
            </div>
          </div>
      </div>
    </div>

  </div>
</div>

<div>
  <%= button_to "Back", challenges_path, :class => "btn btn-primary", :method => :get  %>
</div>

